<?xml version="1.0" ?>

<robot name="architrave">

  <link name="base_link"> 
    <visual>
      <origin rpy="0 0 0" xyz="0 0.5 0"/>
      <geometry>
        <sphere radius="0.03"/>
      </geometry> 
      <material name="grey">
        <color rgba=".5 .5 .5 1"/>
      </material> 
    </visual>
  </link>



  <link name="grey_edge"> 
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0" ixy="0.0" ixz="0.0" iyy="0" iyz="0.0" izz="0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size=".4 .05 .05" />
      </geometry> 
      <material name="grey">
        <color rgba=".5 .5 .5 1"/>
      </material> 
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size=".4 .05 .05" />
      </geometry>
    </collision>  
  </link>
  <joint name="grey_joint" type="fixed">
    <parent link="base_link"/>
    <child link="grey_edge"/>
  </joint>



